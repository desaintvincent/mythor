{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "ignoreChanges": ["**/*.md"],
  "granularPathspec": false,
  "command": {
    "version": {
      "ignore": ["**/*.md"],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "ignore": ["**/*.md"]
    }
  }
}
